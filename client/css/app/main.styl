// app/layout.styl

@import '../_variables'
@import '../_mixins'
@import './topbar'
@import './partners'
@import './speakers'
@import './home'
@import './card'
@import './auth'

.page
  padding-top: 45px

@media (min-width: 768px)
  .navbar-default
      min-height: 0
      height: 52px

  .navbar-right
    margin-right: 15px;
    li
      cursor: pointer
      div.dropdown
        a
          display: block
          i.fa-caret-down-a
            padding: 18px 5px;
            vertical-align: top;
          i.fa-caret-down-a:after
            content: "\f0d7"

  body
    background: white
    font-family: 'Open Sans', sans-serif !important

  i.fa
    span
      margin: 0 5px

  div.auth
    button
      margin-right: 15px;
    i
      font-weight: bold;

  .clear
    clear: both

  .no-select
    -webkit-touch-callout: none
    -webkit-user-select: none
    -khtml-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none
