.speakers
  .title
    color: #aaa
    font-style: italic
    margin: 5px
    font-weight: 400
    font-size: 80%

  .list
    .speaker
      padding: 10px
      a
        text-decoration: none
        text-align: center
        .img
          overflow: hidden
          background-size: cover
          background-position: 50%
          background-color: #eee
          width: 100%
          padding-bottom: 100%
          border-radius: 50%
          margin: 10px
        .text
          height: 100px