.speakers.view
  text-align: center

  .title
    margin-bottom: 20px

  .details
    .session
      margin-bottom: 30px


.speakers
  .img-container
    max-width: 300px
    margin-left: auto
    margin-right: auto
  .img
    overflow: hidden
    background-size: cover
    background-position: 50%
    background-color: #eee
    width: 100%
    padding-bottom: 100%
    border-radius: 50%
    margin: 10px

  .name
    margin: 30px

  .title
    color: #aaa
    font-style: italic
    margin: 5px
    font-weight: 400

  .list
    .speaker
      padding: 10px
      a
        text-decoration: none
        text-align: center
        .text
          height: 100px